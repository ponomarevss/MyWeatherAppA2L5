<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/recycler_imageview"
        android:contentDescription="@string/city_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/ci_astrahan" />


    <TextView
        android:id="@+id/recycler_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_vertical"

        android:shadowColor="@color/colorBlack"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:text="Астрахань"/>

</androidx.cardview.widget.CardView>